<h1>List of Users</h1>

<table border='1'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Private?</th>
      <th>Show details</th>
      <% if user_signed_in? %>
        <th>Follow</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.private ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show details', user_path(user), class: "btn btn-secondary" %></td>
        <% if user_signed_in? && current_user != user %>
          <td>
            <% follow_status = @follow_statuses[user.id] %>
            <% if follow_status == 'accepted' %>
              <%= button_to 'Unfollow', 
                            unfollow_follow_requests_path(id: user.id), 
                            method: :delete, 
                            class: 'btn btn-danger',
                            data: { turbo: false } %>
            <% elsif follow_status == 'pending' %>
              <div>
                Request sent
                <%= link_to 'Cancel', 
                            cancel_request_follow_requests_path(id: user.id), 
                            method: :delete, 
                            class: 'btn btn-warning',
                            data: { turbo: false } %>
              </div>
            <% else %>
              <%= button_to 'Follow',
                            follow_follow_requests_path,
                            params: { recipient_id: user.id },
                            method: :post,
                            class: 'btn btn-primary',
                            data: { turbo: false } %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
