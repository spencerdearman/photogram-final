<h1>List of Users</h1>

<table border='1'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Private?</th>
      <th>Show details</th>
      <% if user_signed_in? %>
        <th>Follow</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.private ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show details', user_path(user), class: "btn btn-secondary" %></td>
        <% if user_signed_in? %>
          <td>
            <% if current_user == user %>
              <%= button_to 'Go to Your Profile', user_path(user), method: :get, class: 'btn btn-primary' %>
            <% else %>
              <% follow_status = @follow_statuses[user.id] %>
              <% if follow_status == 'accepted' %>
                <%= button_to 'Unfollow', 
                              unfollow_follow_requests_path(id: user.id), 
                              method: :delete, 
                              class: 'btn btn-danger',
                              data: { turbo: false } %>
              <% elsif follow_status == 'pending' %>
                <div>
                  Request sent.
                  <%= link_to 'Cancel', cancel_request_follow_requests_path(id: user.id), method: :delete, class: 'btn btn-warning', data: { turbo: false } %>
                </div>
              <% else %>
                <%= form_with(url: follow_follow_requests_path, method: :post, local: true) do |form| %>
                  <%= form.hidden_field :recipient_id, value: user.id %>
                  <button type="submit" class="btn btn-primary">Follow</button>
                <% end %>
              <% end %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
