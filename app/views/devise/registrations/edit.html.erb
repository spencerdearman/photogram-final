<h2>Edit Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { class: 'form-control' } %>
                
    <%= f.input :email,
                required: true,
                input_html: { class: 'form-control' } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "leave blank if you don't want to change it",
                required: false,
                input_html: { class: 'form-control' } %>

    <%= f.input :password_confirmation,
                required: false,
                input_html: { class: 'form-control' } %>

    <%= f.input :current_password,
                hint: "enter your current password to confirm changes",
                required: true,
                input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, "Update", class: 'btn btn-primary' %>
  </div>
<% end %>

<hr>

<h3>Cancel Account</h3>
<div class="d-flex align-items-center">
  <p class="mb-0 mr-3">Unhappy?</p>
  <%= button_to "Cancel my account", 
                registration_path(resource_name), 
                method: :delete,
                class: 'btn btn-danger',
                data: { turbo_confirm: "Are you sure you want to delete your account?" } %>
</div>

<div class="mt-3">
  <%= link_to "Back", :back, class: 'btn btn-secondary' %>
</div>
